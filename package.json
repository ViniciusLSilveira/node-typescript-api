{
    "name": "typescript-api",
    "version": "1.0.0",
    "description": "Typescript Node.js API",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "start": "yarn build && node dist/src/index.js",
        "start:dev": "ts-node-dev --transpile-only src/index.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:functional": "jest --projects ./test --forceExit --runInBand",
        "lint": "eslint ./src ./test --ext .ts",
        "lint:fix": "eslint ./src ./test --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ViniciusLSilveira/node-typescript-api.git"
    },
    "keywords": [
        "node.js",
        "typescript",
        "api"
    ],
    "author": "Vinicius Lima",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ViniciusLSilveira/node-typescript-api/issues"
    },
    "homepage": "https://github.com/ViniciusLSilveira/node-typescript-api#readme",
    "dependencies": {
        "@overnightjs/core": "^1.7.6",
        "@types/express": "^4.17.13",
        "body-parser": "^1.19.1",
        "express": "^4.17.2",
        "module-alias": "^2.2.2"
      },
      "devDependencies": {
        "@types/jest": "^27.0.3",
        "@types/module-alias": "^2.0.1",
        "@types/node": "16",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "eslint": "^8.5.0",
        "jest": "^27.4.5",
        "supertest": "^6.1.6",
        "ts-jest": "^27.1.2",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.4"
      }
}
